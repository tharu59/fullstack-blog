<%- include("partials/header.ejs", {title: "Post Details", user: user}) %>

<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-lg-10">
            <a href="/posts" class="btn btn-link text-decoration-none mb-3 p-0">
                <i class="bi bi-arrow-left"></i> Back to Feed
            </a>

            <header class="mb-4">
                <h1 class="display-4 fw-bold text-dark mb-2"><%= post?.title %></h1>
                <div class="mt-4 mb-4">
    <div class="mb-2 d-flex align-items-center">
        <span class="text-muted fs-5">posted By :</span> 
        <span class="badge bg-light text-dark border ms-2 fs-5 py-2 px-3 shadow-sm">
            <i class="bi bi-person-fill me-1"></i><%= post?.author?.username %>
        </span>
    </div>

    <div class="fs-5">
        <span class="text-muted">Published on :</span> 
        <strong class="ms-1 text-dark">
            <%= new Date(post?.createdAt).toLocaleDateString('en-US', { month: 'long', day: 'numeric', year: 'numeric' }) %>
        </strong>
    </div>
</div>
            </header>

            <section class="post-body bg-white p-4 p-md-5 rounded shadow-sm border mb-5">
                <p class="lead text-secondary mb-5" style="white-space: pre-line; line-height: 1.8;">
                    <%= post?.content %>
                </p>

                <div class="row g-3">
                    <% post?.images?.forEach((image) => { %>
                        <div class="col-md-6">
                            <div class="ratio ratio-4x3 overflow-hidden rounded shadow-sm">
                                <img src="<%= image.url %>" alt="Post detail image" class="img-fluid object-fit-cover hover-zoom" />
                            </div>
                        </div>
                    <% }) %>
                </div>
            </section>

            <% if(user && post?.author && user._id.toString() === post.author._id.toString()){ %>
    <div class="admin-controls d-flex gap-2 justify-content-end p-3 bg-light rounded border border-dashed mb-4">
        <span class="align-self-center me-auto text-muted small px-2">
            <%= post?.author?.username %>, you are the author
        </span>
        <a href="/posts/<%= post?._id %>/edit" class="btn btn-outline-warning btn-sm">Edit</a>
        <a href="/posts/<%= post?._id %>/delete" class="btn btn-danger btn-sm" onclick="return confirm('Delete this post?')">Delete</a>
    </div>
<% } %>

<section class="comments-section mt-5">
    <h3 class="fw-bold mb-4"><i class="bi bi-chat-left-text me-2"></i>Comments</h3>

    <% if(user) { %>
        <div class="card border-0 shadow-sm mb-4">
            <div class="card-body">
                <form action="/posts/<%= post?._id %>/comments" method="POST">
                    <div class="mb-3">
                        <label for="content" class="form-label small fw-bold text-muted">Leave a comment</label>
                        <textarea 
                            name="content" 
                            id="content" 
                            class="form-control" 
                            rows="3" 
                            placeholder="What are your thoughts?" 
                            required></textarea>
                    </div>
                    <div class="text-end">
                        <button type="submit" class="btn btn-primary px-4">Post Comment</button>
                    </div>
                </form>
            </div>
        </div>
    <% } else { %>
        <div class="alert alert-light border text-center">
            Please <a href="/login">Login</a> to leave a comment.
        </div>
    <% } %>

    <div class="comment-list mt-4">
        <% if(post.comments && post.comments.length > 0) { %>
            <% } else { %>
            <p class="text-muted text-center italic">No comments yet. Be the first to break the silence!</p>
        <% } %>
    </div>
</section>
        </div>
    </div>
</div>


<style>
    .hover-zoom {
        transition: transform 0.3s ease;
    }
    .hover-zoom:hover {
        transform: scale(1.05);
    }
    .border-dashed {
        border-style: dashed !important;
    }
</style>

<%- include("partials/footer.ejs") %>
<%- include('partials/header', { title: title, user: user }) %>

<div class="fixed-controls mb-4">
  <div class="container d-flex justify-content-between align-items-center">
    <div>
      <h2 class="fw-bold mb-0" style="letter-spacing: -1px;"><%= typeof pageTitle !== 'undefined' ? pageTitle : 'Explore Posts' %></h2>
      <p class="text-muted small mb-0">Discover what's happening in the community</p>
      <% if(typeof pageTitle !== 'undefined' && pageTitle.includes("Posts by")) { %>
          <a href="/posts" class="small text-primary text-decoration-none"><i class="fas fa-arrow-left me-1"></i>View All Posts</a>
      <% } %>
    </div>
    <a href="/posts/add" class="btn btn-primary shadow-sm">
      <i class="fas fa-plus me-2"></i>New Post
    </a>
  </div>
</div>

<div class="container pb-5">
  
  <% if(user && !pageTitle.includes("Posts by")) { %>
    <!-- Authenticated User View: Split Layout -->
    
    <!-- 1. Your Posts Section (Horizontal Scroll or Grid) -->
    <div class="mb-5">
      <h4 class="fw-bold mb-3 text-primary"><i class="fas fa-layer-group me-2"></i>Your Posts</h4>
      <% const myPosts = posts.filter(p => p.author && p.author._id.toString() === user._id.toString()); %>
      
      <% if(myPosts.length > 0) { %>
        <div class="row g-4 flex-nowrap overflow-auto pb-3" style="scrollbar-width: thin;">
          <% myPosts.forEach(post => { %>
            <div class="col-10 col-md-5 col-lg-4">
               <article class="card h-100 shadow-sm border-0 card-owner">
                  <div class="post-image-wrapper">
                    <% if (post.images && post.images.length > 0) { %>
                      <img src="<%= post.images[0].url %>" class="post-image" alt="<%= post.title %>">
                    <% } else { %>
                      <div class="text-muted small"><i class="fas fa-image fa-2x"></i></div>
                    <% } %>
                  </div>
                  <div class="card-body d-flex flex-column p-4">
                    <div class="mb-2">
                       <span class="badge bg-primary text-white">You</span>
                       <% if(post.category) { %>
                        <span class="badge bg-light text-dark border ms-1"><%= post.category %></span>
                       <% } %>
                    </div>
                    <h5 class="card-title fw-bold text-dark"><%= post.title %></h5>
                    <div class="mt-auto pt-3 border-top d-flex justify-content-between">
                       <small class="text-muted"><%= new Date(post.createdAt).toLocaleDateString() %></small>
                       <a href="/posts/<%= post._id %>" class="text-primary fw-bold text-decoration-none small">Read</a>
                    </div>
                  </div>
               </article>
            </div>
          <% }) %>
        </div>
      <% } else { %>
        <div class="alert alert-light border-dashed text-center">
           You haven't created any posts yet. <a href="/posts/add">Create one now!</a>
        </div>
      <% } %>
    </div>

    <!-- 2. Community Posts Section -->
    <div>
      <h4 class="fw-bold mb-3 text-dark"><i class="fas fa-globe me-2"></i>Community Posts</h4>
      <div class="row g-4">
        <% const otherPosts = posts.filter(p => !p.author || p.author._id.toString() !== user._id.toString()); %>
        <% if (otherPosts.length > 0) { %>
          <% otherPosts.forEach(post => { %>
            <div class="col-lg-4 col-md-6">
              <article class="card h-100 shadow-sm border-0">
                <div class="post-image-wrapper">
                  <% if (post.images && post.images.length > 0) { %>
                    <img src="<%= post.images[0].url %>" class="post-image" alt="<%= post.title %>">
                  <% } else { %>
                    <div class="text-muted small"><i class="fas fa-image fa-2x"></i></div>
                  <% } %>
                </div>
                <div class="card-body d-flex flex-column p-4">
                  <div class="mb-2 d-flex align-items-center">
                     <span class="author-badge">
                        <i class="fas fa-user me-1"></i><%= post.author?.username || 'Unknown' %>
                     </span>
                     <% if(post.category) { %>
                        <span class="badge bg-light text-dark border ms-2"><%= post.category %></span>
                     <% } %>
                  </div>
                  <h4 class="card-title fw-bold text-dark"><%= post.title %></h4>
                  <p class="card-text text-secondary small flex-grow-1"><%= post.content.substring(0, 100) %>...</p>
                  <div class="d-flex justify-content-between align-items-center mt-3 pt-3 border-top">
                    <small class="text-muted"><%= new Date(post.createdAt).toLocaleDateString() %></small>
                    <a href="/posts/<%= post._id %>" class="text-primary fw-bold text-decoration-none small">Read Full Post <i class="fas fa-arrow-right ms-1"></i></a>
                  </div>
                </div>
              </article>
            </div>
          <% }) %>
        <% } else { %>
           <div class="col-12 text-center py-5"><p class="text-muted">No community posts yet.</p></div>
        <% } %>
      </div>
    </div>

  <% } else { %>
    <!-- fallback for Guest OR Filtered view (shows standard grid) -->
    <div class="row g-4">
      <% if (posts?.length > 0) { %>
        <% posts.forEach(post => { %>
          <% const isOwner = user && post.author && user._id.toString() === post.author._id.toString(); %>
          <div class="col-lg-4 col-md-6">
            <article class="card h-100 shadow-sm border-0 <%= isOwner ? 'card-owner' : '' %>">
              <div class="post-image-wrapper">
                <% if (post.images && post.images.length > 0) { %>
                  <img src="<%= post.images[0].url %>" class="post-image" alt="<%= post.title %>">
                <% } else { %>
                  <div class="text-muted small"><i class="fas fa-image fa-2x"></i></div>
                <% } %>
              </div>
              <div class="card-body d-flex flex-column p-4">
                <div class="mb-2 d-flex align-items-center flex-wrap gap-2">
                  <a href="/posts?author=<%= post.author?._id %>" class="text-decoration-none text-dark">
                    <span class="author-badge <%= isOwner ? 'bg-primary text-white' : '' %>">
                       <%= post.author?.username || 'Unknown' %> <%= isOwner ? '(You)' : '' %>
                    </span>
                  </a>
                  <% if(post.category) { %>
                    <span class="badge bg-light text-dark border ms-2"><%= post.category %></span>
                  <% } %>
                </div>
                <h4 class="card-title fw-bold text-dark"><%= post.title %></h4>
                <p class="card-text text-secondary small flex-grow-1"><%= post.content.substring(0, 100) %>...</p>
                <div class="d-flex justify-content-between align-items-center mt-3 pt-3 border-top">
                  <small class="text-muted"><%= new Date(post.createdAt).toLocaleDateString() %></small>
                  <a href="/posts/<%= post._id %>" class="text-primary fw-bold text-decoration-none small">Read Full Post <i class="fas fa-arrow-right ms-1"></i></a>
                </div>
              </div>
            </article>
          </div>
        <% }) %>
      <% } else { %>
        <div class="col-12 text-center py-5">
          <p class="text-muted">No posts yet. Be the first to share something!</p>
          <a href="/posts/add" class="btn btn-primary mt-3">Create First Post</a>
        </div>
      <% } %>
    </div>
  <% } %>
</div>

<%- include('partials/footer') %>